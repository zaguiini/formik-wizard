{
  "compilerOptions": {
    "target": "es5",
    "skipLibCheck": false,
    "esModuleInterop": true,
    "declaration": true,
    "noImplicitAny": true,
    "declarationDir": "dist",
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "lib": ["dom", "esnext"],
    "jsx": "react",
    "outDir": "dist",
    "pretty": true,
    "removeComments": true,
    "strictNullChecks": true,
    "stripInternal": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
